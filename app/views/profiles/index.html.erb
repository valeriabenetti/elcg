<div class="page-header">
    <%= link_to "New Profile", new_profile_path, class: 'new-home-button btn btn-primary pull-right' %>

  <h1 Listing>profiles</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Role</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table-body">
      <%- @profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.role %></td>
        <td><%= profile.user %></td>
        <td>
          <%= link_to profile do %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_profile_path(profile) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to profile, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
