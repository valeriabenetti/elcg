<div class="page-header">
  <%= link_to new_test_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Test
  <% end %>
  <h1 Listing>tests</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Procedure identifier</th>
        <th>Procedure name</th>
        <th>Procedure master number</th>
        <th>Synonyms</th>
        <th>Test code</th>
        <th>Category code</th>
        <th>Category name</th>
        <th>Eppicare inactive flag</th>
        <th>Orderable</th>
        <th>Collection identifier</th>
        <th>Collection name</th>
        <th>Collection instructions</th>
        <th>Process identifier</th>
        <th>Process name</th>
        <th>Process intructions</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table-body">
      <%- @tests.each do |test| %>
      <tr>
        <td><%= test.procedure_identifier %></td>
        <td><%= test.procedure_name %></td>
        <td><%= test.procedure_master_number %></td>
        <td><%= test.synonyms %></td>
        <td><%= test.test_code %></td>
        <td><%= test.category_code %></td>
        <td><%= test.category_name %></td>
        <td><%= test.eppicare_inactive_flag %></td>
        <td><%= test.orderable %></td>
        <td><%= test.collection_identifier %></td>
        <td><%= test.collection_name %></td>
        <td><%= test.collection_instructions %></td>
        <td><%= test.process_identifier %></td>
        <td><%= test.process_name %></td>
        <td><%= test.process_intructions %></td>
        <td>
          <%= link_to test do %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_test_path(test) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to test, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
